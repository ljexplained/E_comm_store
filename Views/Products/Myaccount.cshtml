@{
    Layout = null;
   var orders = ViewData["orders"] as List<radiobutton.Models.Orders>;
}

<!DOCTYPE html>
<html>
<title>Braino Services </title>
<link rel="icon" href="~/images/logo/6.png" type="image/png" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<body>
<br />
<br />
<div class="w3-container">
    @if(ViewBag.uname==null)
        {
            <h2>Please <a href="~/Products/UserLogin">Log In</a> to see account Details</h2>
        }


       else
        {

            <a class="navbar-brand logo_h" href="~/Products/Allproducts">
                <img src="~/images/logo/5.png" alt="logo images">
            </a>

            <br />
            <br />
            <a href="~/Products/Allproducts">

                <button class="btn btn-primary">Continue Shopping</button>

            </a>
            <br />
            <br />
           
            <div class="w3-bar w3-black">
                <button class="w3-bar-item w3-button tablink " onclick="openCity(event,'London')">Account Info</button>
                <button class="w3-bar-item w3-button tablink w3-red" onclick="openCity(event,'Paris')">Orders</button>
                <button class="w3-bar-item w3-button tablink" onclick="openCity(event,'Tokyo')">Addresses</button>
            </div>

            <div id="London" class="w3-container w3-border city" style="display:none">
                <h2>Account Info</h2>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Name:&nbsp;<span>@ViewBag.custname</span></h5>
                                <h5 class="card-title">Email:&nbsp;<span>@ViewBag.email</span></h5>
                                <h5 class="card-title">Phone Number:&nbsp;<span>@ViewBag.phone</span></h5>

                            </div>
                        </div>
                    </div>
                </div>
                <br>
            </div>

            <div id="Paris" class="w3-container w3-border city">
                <h2>Orders</h2>
                <div class="row">
                    @if(orders!=null)
                    {
                        foreach(var item in orders)
                        {
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-body">
                                        
                                        <h5 class="card-title">Order #:&nbsp;<span>@item.Id</span></h5>
                                       <!-- <h5 class="card-title">Order Date:&nbsp;<span>item.orderDate</span></h5>-->
                                        @if(item.Trackurl!="")
                                        {
                                            <h5 class="card-title">Tracking No:&nbsp;<a href="@item.Trackurl" ><span>Track Order</span></a></h5>
                                        }
                                        <h5 class="card-title">Order date:&nbsp;<span>@item.dateoforder</span></h5>
                                        <a href="~/Products/OrderDetails?id=@item.Id" class="btn btn-secondary">Order Details</a>
                                        <a href="~/Administration/Report?id=@item.Id" class="btn btn-primary">Download Invoice</a>
                                        <a href="~/Products/Allproducts">Continue Shopping</a>
                                    </div>
                                </div>
                            </div>

                        }
                       
                    }
                   

                </div>
             <br />
          </div>

            <div id="Tokyo" class="w3-container w3-border city" style="display:none">
                <h2>Address</h2>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Street:&nbsp;<span>@ViewBag.street</span></h5>
                                <h5 class="card-title">City:&nbsp;<span>@ViewBag.city</span></h5>
                                <h5 class="card-title">Pin code:&nbsp;<span>@ViewBag.post</span></h5>
                                <h5 class="card-title">Phone Number:&nbsp;<span>@ViewBag.phone</span></h5>

                            </div>
                        </div>
                    </div>
                </div>
                <br>
               
            </div>
            
        }
        
      
</div>

<script>
function openCity(evt, cityName) {
  var i, x, tablinks;
  x = document.getElementsByClassName("city");
  for (i = 0; i < x.length; i++) {
    x[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablink");
  for (i = 0; i < x.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" w3-red", "");
  }
  document.getElementById(cityName).style.display = "block";
  evt.currentTarget.className += " w3-red";
}
</script>

</body>
</html>
